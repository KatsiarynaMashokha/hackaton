{{#partial "title"}}
    Edit team member information
{{/partial}}

{{#partial "content"}}
    <h3>Enter new details</h3>
    <form action="/teams/{{currentMember.teamId}}/members/{{currentMember.memberId}}/update" method="post">
        <div class="form-group">
            <h4>Enter name:</h4>
            <label for="memberName"></label>
            <input id="memberName" name="memberName" type="text" value="{{currentMember.name}}" required>
        </div>
        <div class="form-group">
            <h4>Enter age:</h4>
            <label for="memberAge"></label>
            <input id="memberAge" name="memberAge" type="text" value="{{currentMember.age}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
{{/partial}}

{{> layout.hbs}}