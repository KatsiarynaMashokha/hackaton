{{#partial "header"}}
    <h3>Edit team information</h3>
{{/partial}}

{{#partial "content"}}
    <form action="/teams/{{currentTeam.id}}/update" method="post">
        <div class="form-group">
            <h4>Enter new team name:</h4>
            <label for="teamName"></label>
            <input id="teamName" name="teamName" type="text" value="{{currentTeam.teamName}}" required>
        </div>
        <div class="form-group">
            <h4>Enter new team description:</h4>
            <label for="teamDescription"></label>
            <input id="teamDescription" name="teamDescription" type="text" value="{{currentTeam.description}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
{{/partial}}

{{> layout.hbs}}