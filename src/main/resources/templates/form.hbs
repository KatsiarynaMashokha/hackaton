{{#partial "header"}}
    <h3>Enter your team details</h3>
{{/partial}}

{{#partial "content"}}
    <form action="/" method="post">
        <div class="form-group">
            <h4>Enter team name:</h4>
            <label for="teamName"></label>
            <input id="teamName" name="teamName" type="text" required>
        </div>
        <div class="form-group">
            <h4>Enter team description:</h4>
            <label for="teamDescription"></label>
            <input id="teamDescription" name="teamDescription" type="text" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{{/partial}}

{{> layout.hbs}}