{{#partial "header"}}
    <h3>Enter new team member information:</h3>
{{/partial}}
{{#partial "content"}}
    <form action="/teams/{{currentTeam.id}}" method="post">
        <div class="form-group">
            <p class="newTeamMember">Enter name:</p>
            <label for="memberName"></label>
            <input id="memberName" name="memberName" type="text" required>
        </div>
        <div class="form-group">
            <p class="newTeamMember">Enter age:</p>
            <label for="memberAge"></label>
            <input id="memberAge" name="memberAge" type="number" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Member</button>
    </form>
{{/partial}}

{{> layout.hbs}}