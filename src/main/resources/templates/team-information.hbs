{{#partial "content"}}

    <h3>Team details:</h3>
    <p class="newTeamMember">Team name: {{currentTeam.teamName}}</p>
    <p class="newTeamMember">Team description: {{currentTeam.description}}</p>

    {{#if currentMembers}}
        <p class="newTeamMember">Members:</p>
        {{#each currentMembers}}
            <ul>
                <li>Name: {{name}}<br>Age: {{age}}</li>
            </ul>
            <div id="removeButton">
                <a href="/teams/{{currentTeam.id}}/members/{{memberId}}/delete"><button class="astext">Click here to remove this team member</button></a>
            </div>
        {{/each}}
        <hr>
    {{else}}
        <p class="newTeamMember"No team members yet!></p>
    {{/if}}
    <div class="editInfo">
       <a href="/teams/{{currentTeam.id}}/members/new"><button class="astext">Add a new team member</button></a>
        <a href="/teams/{{currentTeam.id}}/update"><button class="astext">Click here to edit team info</button></a>
    </div>
        <hr>
{{/partial}}

{{> layout.hbs}}